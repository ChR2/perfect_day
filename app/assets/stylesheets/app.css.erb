body, html { height: 100%; background: #eee; }

.welcome {
	height: 100%;
	background: url(<%=asset_url('city_scape.jpg')%>) center center;
	background-size: cover;
	overflow: hidden;
}
	.logo {
		margin: 200px 15px 0 15px;
		text-align: center;
	}
	.welcome_message {
		font: normal 18px 'Open Sans';
		font-weight: 200;
		text-align: center;
		color: #555;
	}
	.enter {	
		background: #fff;
		margin-top: 30px;
		padding: 10px 10px 20px 10px;
		border-radius: 5px;

		-moz-box-shadow:    0 2px 10px 0 #222;
	  -webkit-box-shadow: 0 2px 10px 0 #222;
	  box-shadow:         0 2px 10px 0 #222;
	}
	.fb_sign_in {
		font: normal 20px 'Open Sans';
		font-weight: 700;
		padding: 20px 0;
		background: #17B1FC;
		color: #0D4E8F;
		text-align: center;
		display: block;
		border-radius: 6px;

		text-shadow: 0 1px 1px rgba(255,255,255,0.5);
	}

.header {
	position: fixed;
	padding: 5px 0;
	background: #fff;
	z-index: 2;
	-moz-box-shadow:    0 1px 2px 0 #aaa;
	-webkit-box-shadow: 0 1px 2px 0 #aaa;
	box-shadow:         0 1px 2px 0 #aaa;
}
	.user_avatar {
		width: 40px;
		height: 40px;
		margin-left: 15px;
		border-radius: 100px;
}

.map_holder {
	background: #eee;
	padding: 60px 0 49px 0;
}
	.perfect_day_list {
		margin: 10px 15px 0 15px;
		padding-bottom: 20px;
		border-bottom: 1px dashed #ccc;
	}
		.day_title {
			font: normal 1em 'Open Sans';
			font-weight: 700;
			color: #F7314C;
			text-shadow: 0 1px 1px #fff;
		}
		.map_background {
			position: relative;
			margin-top: 10px;
			background: #fff;
			padding: 5px 5px 10px 5px;
			border-radius: 3px;

			-moz-box-shadow:    0 1px 4px 0 #bbb;
	  	-webkit-box-shadow: 0 1px 4px 0 #bbb;
	  	box-shadow:         0 1px 4px 0 #bbb;
		}
			span.itinerary_score {
				position: absolute;
				right: 0;
				top: -33px;
				padding: 2px 20px;
				display: block;
				background: #ccc;
				border-radius: 5px;
				z-index: 1;
				font: normal 15px 'Open Sans';
				font-weight: 700;
				color: #fff;

				-moz-box-shadow:    0 1px 0 0 #fff;
	  		-webkit-box-shadow: 0 1px 0 0 #fff;
	  		box-shadow:         0 1px 0 0 #fff;
			}

.footer_nav {
	position: fixed;
	bottom: 0;
	padding: 10px 0 10px 0;
	background: #555;
	text-align: center;
	font-size: 1.8em;
	text-shadow: 0 2px 2px rgba(0,0,0,0.5);
}
	
/* Misc */
.small_buttons {
	font: normal 18px 'Open Sans';
	font-weight: 700;
	color: #888;
}

/* Spot View */
.itin_header {
	margin-top: 52px;
	background: #ddd;
	padding: 0 15px 0 15px;
	overflow: hidden;
	z-index: 1;
	border-bottom: 1px solid rgba(255,255,255,1);
}
	.itin_title {
		margin: 0;
		padding: 5px 0;
		font: normal 1em 'Open Sans';
		font-weight: 700;
		color: #333;
	}

/* Tag Code */
.tags{
	margin: 5px 0 0 0;
	padding:0;
	/*position:absolute;
	right:24px;
	bottom:-12px;*/
	list-style:none;
}

.tags li, .tags a{
	display: inline-block;
	height:24px;
	line-height:24px;
	position:relative;
	font-size:11px;
}

.tags a{
	margin-left:0px;
	padding:0 10px 0 10px;
	background:#0089e0;
	color:#fff;
	text-decoration:none;
	border-radius: 4px;
	cursor: default;
} 

