      <%= image_tag current_user.profile_url, class: "user_avatar" %>
      <%= link_to "Sign out", signout_path(current_user), method: :destroy %>
    </div>
  </div>

  <% elsif current_page?('/') %>

  <% else %>

  <div class="row" style="background: #eee;">
    <div class="small-12">
      Header Goes Here.
    </div>
  </div>

<% end %>