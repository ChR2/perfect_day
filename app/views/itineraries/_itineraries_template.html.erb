<div class="itineraries">

  <% @itineraries.try(:each) do |itinerary| %>
    <a href="/itineraries/<%= itinerary.id %>/spots/<%= itinerary.spots.first.id %>"><%= itinerary.name %></a> <% if current_user %>
  <% link_to "favorite",   favorite_recipe_path(@recipe, type: "favorite"), method: :put %>
  <% link_to "unfavorite", favorite_recipe_path(@recipe, type: "unfavorite"), method: :put %>
<% end %><br>
    <% waypoints = [] %>

    <% itinerary.spots.each do |spot| %>
      <% waypoints << [spot.latitude.to_f, spot.longitude.to_f] %>
    <% end %>

    <div class="map-canvas" data-latlong='<%= waypoints %>' style="width:300px;height:250px;margin:0 auto;display:block;"></div>
  <% end %>

</div>
