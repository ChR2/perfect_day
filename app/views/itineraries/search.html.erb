<div class="row map_holder">

  <span class="twitter-typeahead" style="position: relative; display: inline-block;">
    <!-- Make this form a form helper -->
    <form id="search" action="/search" method="GET">
      <input id="spot_type_search_input" class="typeahead tt-query" type="text" placeholder="Search Categories" autocomplete="off" spellcheck="false" dir="auto" name="name">
      <span class="tt-dropdown-menu" style="position: absolute; top: 100%; left: 0px; z-index: 100; display: none; right: auto;"></span>
      <button id=  type="submit">Search</button>
    </form>
    <!-- end comment -->
  </span>
  <% if @spot_type %>
    <% @distances.each do |distance, spot| %>
      <div class="large-12 perfect_day_list">
    
        <a href="spots/<%= spot.id %>" class="day_title"><%= spot.name %></a>
        
        <div class="map_background">
          <span class="itinerary_score" style="font-size: 0.8em; padding: 2px 10px; font-weight: 400; top: -32px;"><%= distance.round(2) %> mi.</span>
          <div class="spots search-results">
             <div class="map-canvas" data-lat='<%=spot.latitude.to_f%>' data-name='<%=spot.name%>' data-long='<%=spot.longitude.to_f%>' style="width:100%;height:250px;display:block;"></div>
          </div>
        </div>

        <div class="small-12 spot_address" style="margin-top: 10px;"><i class="fa fa-map-marker"></i> <%= spot.address %></div>
        <div class="small-12 spot_address"><i class="fa fa-phone"></i> <%= spot.phone %></div>

      </div>
    <% end %>
  <% end %>
</div>

